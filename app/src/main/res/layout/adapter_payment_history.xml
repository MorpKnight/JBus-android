<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/historylist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/historylist_busName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUSSSS EXAMPLE 01"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/historylist_busRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route: A - B"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:id="@+id/historylist_datePurchase"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="2023-12-21 00:00:00" />

            <TextView
                android:id="@+id/historylist_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 20.000,00"
                android:layout_gravity="right"/>

        </GridLayout>

        

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>