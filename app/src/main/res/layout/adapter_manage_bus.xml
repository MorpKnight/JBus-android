<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/busNameAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Example 01" 
        android:textSize="18sp"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:id="@+id/busStatusAdapterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/busStatusAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/busDepartureTime"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Departure time: " />

                <TextView
                    android:id="@+id/busDepartureTimeAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023-11-12 18:00:00" />


            </LinearLayout>
            
            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Departure Station" />
                
                <TextView
                    android:id="@+id/busDepartureAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JFK Space Station" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Arrival Station" />

                <TextView
                    android:id="@+id/busArrivalAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPACEX Space Station" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="75sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/bus_seat_icon" />

                    <TextView
                        android:id="@+id/busSeatAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40 Seat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bus_adapter_icon" />

                    <TextView
                        android:id="@+id/busTypeAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Double Decker" />
                    
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/facilityContainerAdapter"
                android:layout_width="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/busFacilityAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AC, WIFI, TV, Toilet, Lunch, Large Baggage" />

            </LinearLayout>
            
        </LinearLayout>
        
        <ImageView
            android:id="@+id/add_edit_ScheduleAdapter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/calendar_manage_bus" />

        
    </LinearLayout>

</LinearLayout>