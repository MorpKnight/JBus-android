<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".intent.manage.AddBusActivity">

    <TextView
        android:id="@+id/title_addbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:gravity="top"
        android:text="Add/Edit bus"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle_addbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:text="Add or Edit your bus"
        android:textSize="15sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="370dp"
        android:layout_height="520dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_bus_container"
        android:clipToOutline="true"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/editTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:clipToOutline="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addBusName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:hint="Bus name" />

            <EditText
                android:id="@+id/addBusCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:hint="Bus capacity" />

            <EditText
                android:id="@+id/addBusPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:hint="Bus price" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectBusOptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:clipToOutline="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/busTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/busTypeTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Bus Type"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bus_icon_addbus" />

                <Spinner
                    android:id="@+id/busTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deptStationContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deptStationTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Departure Station"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pinpoint_icon" />

                <Spinner
                    android:id="@+id/deptStationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/arrvStationContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/arrvStationTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Arrival Station"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pinpoint_icon" />

                <Spinner
                    android:id="@+id/arrvStationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:clipToOutline="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facility"
                android:textSize="18sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3">

                <CheckBox
                    android:id="@+id/facilityAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC" />

                <CheckBox
                    android:id="@+id/facilityWIFI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIFI" />

                <CheckBox
                    android:id="@+id/facilityToilet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toilet" />

                <CheckBox
                    android:id="@+id/facilityLCDTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LCD TV" />

                <CheckBox
                    android:id="@+id/facilityCoolbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coolbox" />

                <CheckBox
                    android:id="@+id/facilityLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch" />

                <CheckBox
                    android:id="@+id/facilityLargeBaggage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Baggage" />

                <CheckBox
                    android:id="@+id/facilityElectricSocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric Socket" />

            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addBusButton"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:text="Add / Save Bus"
        android:textStyle="bold"
        android:background="@drawable/addbus_button" />

</LinearLayout>