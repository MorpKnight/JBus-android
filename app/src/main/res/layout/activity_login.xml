<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.landing.LoginActivity">

<!--    <View-->
<!--        android:layout_width="217dp"-->
<!--        android:layout_height="109dp"-->
<!--        android:layout_alignParentLeft="true"-->
<!--        android:layout_marginLeft="97dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_marginTop="45dp"-->
<!--        android:background="@drawable/logobus" />-->

    <View
        android:id="@+id/rectangle_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:background="@drawable/login_rectangle_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="38dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/rectangle_login"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/login_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="giovan@gmail.com"
            android:hint="your email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/login_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:text="Giovan2103"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?" />

            <TextView
                android:id="@+id/create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Sign Up" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>