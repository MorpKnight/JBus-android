<?xml version="1.0" encoding="utf-8"?><!-- Auto layout, variables, and unit scale are not yet supported -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="20dp"
    tools:context=".intent.renter.RegisterRenterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/registerrenter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register your Company"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please fill in the form below" />

            <EditText
                android:id="@+id/registerrenterr_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:hint="Company name" />

            <EditText
                android:id="@+id/registerrenterr_companyaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_horizontal"
                android:hint="Company address" />

            <EditText
                android:id="@+id/registerrenterr_companyphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_horizontal"
                android:hint="Company phone"
                android:inputType="textShortMessage" />

            <Button
                android:id="@+id/registerrenter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Company !!" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>