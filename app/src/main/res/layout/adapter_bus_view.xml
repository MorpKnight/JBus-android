<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/busNameAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Example 01"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/busStatusAdapterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/busStatusAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Departure Station" />

                <TextView
                    android:id="@+id/busDepartureAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JFK Space Station" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Arrival Station" />

                <TextView
                    android:id="@+id/busArrivalAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPACEX Space Station" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>